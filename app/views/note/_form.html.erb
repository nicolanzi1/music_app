<h4 class='sub-header'>New Note</h4>

<form action="<%= notes_url %>" method="post">
    <%= auth_token %>

    <input type="hidden" name="note[track_id]" value="<%= track.id %>">

    <p>
        <label for="note_content">Content</label>
        <textarea id="note_content"
            name="note[content]"
            cols="30" rows="7"></textarea>
    </p>

    <input type="submit">
</form>
